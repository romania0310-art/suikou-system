{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "webapp",
  "compatibility_date": "2025-08-18",
  "pages_build_output_dir": "./dist",
  
  // 起動速度最適化設定
  "compatibility_flags": [
    "nodejs_compat"
  ],
  
  // D1データベース（必要最小限）
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "webapp-production",
      "database_id": "local-development-db"
    }
  ],
  
  // 開発時の最適化
  "dev": {
    "ip": "0.0.0.0",
    "port": 3000,
    "local_protocol": "http"
  }
}